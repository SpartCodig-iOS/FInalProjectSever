# JWT Configuration
JWT_SECRET=your-secret-jwt-key-here

# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key-here

# Supabase Database URL (production / hosted environments)
SUPABASE_DB_URL=postgres://USER:PASSWORD@db.your-project.supabase.co:5432/postgres

# Legacy Supabase Variables (for backward compatibility)
SUPERBASE_URL=${SUPABASE_URL}
SUPERBASE_ANON_KEY=${SUPABASE_ANON_KEY}
