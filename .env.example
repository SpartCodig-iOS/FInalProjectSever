SUPERBASE_DB_URL=${SUPABASE_DB_URL}

# Database Configuration (for local development only)
DATABASE_HOST=db
DATABASE_NAME=vapor_database
DATABASE_USERNAME=vapor_username
DATABASE_PASSWORD=vapor_password
